{
    // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
    // 기존 특성에 대한 설명을 보려면 가리킵니다.
    // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/Debug-linux/devka-editor/devka-editor",
            "preLaunchTask": "GMake Build Debug",
            "stopAtEntry": false,
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe"
            },
            "cwd": "."
        },
        {
            "name": "Build and Test Release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/Release-linux/devka-editor/devka-editor",
            "preLaunchTask": "GMake Build Release",
            "stopAtEntry": false,
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe"
            },
            "cwd": "."
        }
    ]
}